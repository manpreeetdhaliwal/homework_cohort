<%- include('./partials/header') %>

<%- include("./partials/navbar")%>

<% cohorts.forEach((cohort)=> { %>
    
        <div class="card mt-4">
        <div class="row p-2 bg-light border">
               
            <div class="col-sm-1">
                <img src=<%= cohort.logo_url %>  class="rounded-circle" height ="50px" width="50px" overflow="hidden" alt ="logo" >

            </div>  
            <div class="col-sm-11">
                <h1><%= cohort.name %>  </h1>
            </div>
            <div> 
                <p><%= cohort.members %></p></div>
            <div>
            <form action="/cohorts/<%=cohort.id%>" method=GET>
                <input type="submit"class="btn btn-primary" value="Show more">
            </form>
            </div>
                
        </div>
        </div>

    
<% }) %>
<%- include('./partials/footer') %> 
   

